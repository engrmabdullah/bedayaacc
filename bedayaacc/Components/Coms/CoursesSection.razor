                    </div>
                    <div class="course-stat-enhanced">
                        <i class="fas fa-certificate" aria-hidden="true"></i>
                        <span>@Tr("Courses.Certificate")</span>
                    </div>
                </div>
            </div>

        </div>

        <!-- View All Button -->
        <div class="courses-view-all-enhanced">
            <a href="/courses" class="btn-view-all-enhanced">
                <span>@Tr("Courses.ViewAll")</span>
                <i class="fas fa-arrow-right" aria-hidden="true"></i>
            </a>
        </div>
    </div>

    <div class="courses-wave-bottom-enhanced"></div>
</section>

@code {
    private string Tr(string key) => TranslationService.Translate(key);
}