                    </div>

                    <div class="course-meta-enhanced">
                        <div class="course-meta-item-enhanced">
                            <i class="far fa-clock" aria-hidden="true"></i>
                            <span>@Tr("Courses.Tax.Duration")</span>
                        </div>
                        <div class="course-meta-item-enhanced">
                            <i class="fas fa-signal" aria-hidden="true"></i>
                            <span>@Tr("Courses.Tax.Level")</span>
                        </div>
                        <div class="course-meta-item-enhanced">
                            <i class="fas fa-user-graduate" aria-hidden="true"></i>
                            <span>2,341 @Tr("Courses.Students")</span>
                        </div>
                    </div>

                    <div class="course-footer-enhanced">
                        <div class="course-price-wrapper-enhanced">
                            <div class="course-price-enhanced">@Tr("Courses.Tax.Price")</div>
                            <div class="course-old-price-enhanced">@Tr("Courses.Tax.OldPrice")</div>
