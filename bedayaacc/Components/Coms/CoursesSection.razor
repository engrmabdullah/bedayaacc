@using bedayaacc.Services
@inject NavigationManager Navigation
@inject TranslationService TranslationService

<section class="courses-enhanced">
    <div class="courses-wave-top-enhanced"></div>

    <div class="courses-container-enhanced">
        <!-- Section Header -->
        <div class="courses-header-enhanced">
            <div class="courses-badge-enhanced">
                <i class="fas fa-graduation-cap" aria-hidden="true"></i>
                <span>@Tr("Courses.Badge")</span>
            </div>
            <h2 class="courses-title-enhanced">@Tr("Courses.Title")</h2>
            <p class="courses-subtitle-enhanced">@Tr("Courses.Subtitle")</p>
        </div>

        <!-- Courses Grid -->
        <div class="courses-grid-enhanced">

            <!-- Course Card 1: Fundamentals -->
            <div class="course-card-enhanced">
                <div class="course-image-wrapper-enhanced">
                    <img src="@Tr("Courses.Fundamentals.Image")"
                         alt="@Tr("Courses.Fundamentals.Title")"
                         class="course-image-enhanced" />
                    <div class="course-image-overlay-enhanced"></div>
                    <div class="course-badge-enhanced badge-bestseller">
                        <i class="fas fa-fire" aria-hidden="true"></i>
                        @Tr("Courses.Bestseller")
                    </div>
                </div>

                <div class="course-content-enhanced">
                    <span class="course-category-enhanced">@Tr("Courses.Fundamentals.Category")</span>

                    <h3 class="course-title-enhanced">@Tr("Courses.Fundamentals.Title")</h3>

                    <div class="course-instructor-enhanced">
                        <div class="course-instructor-avatar-enhanced">
                            <i class="fas fa-user" aria-hidden="true"></i>
                        </div>
                        <div class="course-instructor-name-enhanced">
                            @Tr("Courses.By") <strong>@Tr("Courses.Fundamentals.Instructor")</strong>
                        </div>
                    </div>

                    <p class="course-desc-enhanced">@Tr("Courses.Fundamentals.Desc")</p>

                    <div class="course-rating-enhanced">
                        <div class="course-stars-enhanced">
                            <i class="fas fa-star" aria-hidden="true"></i>
                            <i class="fas fa-star" aria-hidden="true"></i>
                            <i class="fas fa-star" aria-hidden="true"></i>
                            <i class="fas fa-star" aria-hidden="true"></i>
                            <i class="fas fa-star-half-alt" aria-hidden="true"></i>
                        </div>
                        <span class="course-rating-number-enhanced">4.8</span>
                        <span class="course-rating-count-enhanced">(2,547)</span>
                    </div>

                    <div class="course-meta-enhanced">
                        <div class="course-meta-item-enhanced">
                            <i class="far fa-clock" aria-hidden="true"></i>
                            <span>@Tr("Courses.Fundamentals.Duration")</span>
                        </div>
                        <div class="course-meta-item-enhanced">
                            <i class="fas fa-signal" aria-hidden="true"></i>
                            <span>@Tr("Courses.Fundamentals.Level")</span>
                        </div>
                        <div class="course-meta-item-enhanced">
                            <i class="fas fa-user-graduate" aria-hidden="true"></i>
                            <span>3,547 @Tr("Courses.Students")</span>
                        </div>
                    </div>

                    <div class="course-footer-enhanced">
                        <div class="course-price-wrapper-enhanced">
                            <div class="course-price-enhanced">@Tr("Courses.Fundamentals.Price")</div>
                            <div class="course-old-price-enhanced">@Tr("Courses.Fundamentals.OldPrice")</div>
                        </div>
                        <a href="/courses/fundamentals" class="course-cta-enhanced">
                            <span>@Tr("Courses.EnrollNow")</span>
                            <i class="fas fa-arrow-right" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>

                <div class="course-stats-bar-enhanced">
                    <div class="course-stat-enhanced">
                        <i class="fas fa-play-circle" aria-hidden="true"></i>
                        <span><strong>45</strong> @Tr("Courses.Lessons")</span>
                    </div>
                    <div class="course-stat-enhanced">
                        <i class="fas fa-file-alt" aria-hidden="true"></i>
                        <span><strong>12</strong> @Tr("Courses.Resources")</span>
                    </div>
                    <div class="course-stat-enhanced">
                        <i class="fas fa-certificate" aria-hidden="true"></i>
                        <span>@Tr("Courses.Certificate")</span>
                    </div>
                </div>
            </div>

            <!-- Course Card 2: Managerial -->
            <div class="course-card-enhanced">
                <div class="course-image-wrapper-enhanced">
                    <img src="@Tr("Courses.Managerial.Image")"
                         alt="@Tr("Courses.Managerial.Title")"
